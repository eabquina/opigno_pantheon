      ),
      'translatable' => 0,
      'type' => 'date',
    ));
  }

  $instance = field_info_instance('node', 'opigno_class_courses', 'class');
  if (empty($instance)) {
    field_create_instance(array(
      'bundle' => 'class',
      'default_value' => NULL,
      'deleted' => 0,
      'description' => '',
      'display' => array(
        'default' => array(
          'label' => 'above',
          'module' => 'entityreference',
          'settings' => array(
            'link' => FALSE,
          ),
          'type' => 'entityreference_label',
          'weight' => 6,
        ),
        'teaser' => array(
          'label' => 'above',
