  $is_already_created = false;
  $links = menu_load_links('main-menu');
  foreach ($links as $link) {
    if ($link['link_path'] == 'collaborative-workspaces') {
      $is_already_created = true;
    }
  }

  if ($is_already_created == false) {
    menu_rebuild();
